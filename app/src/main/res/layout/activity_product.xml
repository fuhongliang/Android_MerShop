<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/navigation_header_container"
        layout="@layout/layout_header" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/navigation_header_container"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/lv_category"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/category_color"
            android:dividerHeight="0dp"
            android:divider="@null"
            android:scrollbars="none" />

        <ListView
            android:id="@+id/lv_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scrollbars="none"
            android:dividerHeight="0dp"
            android:divider="@null"
            />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_above="@+id/ll_bottom"
        />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/rl_manage_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:background="@drawable/editmenu_glfll"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理分类"
                    android:textSize="11sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_add_product"
            android:layout_width="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:background="@drawable/editmenu_addd"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新建商品"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:layout_marginTop="3dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

