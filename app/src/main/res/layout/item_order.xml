<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/bg_button"
            android:textColor="#1C98F6"
            android:gravity="center"
            android:text="#68" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/tv_order_number"
            android:text="立即送达"
            android:textColor="#1C98F6"
            android:textSize="16sp" />
        <Button
            android:id="@+id/btn_print"
            android:layout_width="50dp"
            android:layout_height="26dp"
            android:text="打印"
            android:layout_marginLeft="300dp"
            android:textColor="#000000"
            android:layout_marginTop="9dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="invisible"
            android:background="@drawable/button_edge"/>
    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="72dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="4dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="张先生"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:text="15975900123"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="17dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户已收餐"
                android:textColor="#1C98F6"
                android:textSize="15sp"
                android:gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                />
            <ImageView
                android:id="@+id/icon_weizhi"
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:background="@drawable/icon_weizhi"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：广东省深圳市南山区松白路1053号"
                android:textColor="#D7D6DC"
                android:textSize="14sp"
                android:layout_toRightOf="@id/icon_weizhi"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="11dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        >
        <TextView
            android:id="@+id/rider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="骑手：李海"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18888775544"
            android:layout_toRightOf="@id/rider"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="17dp"
            />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/icon_dianhua"
            android:layout_marginLeft="327dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="香辣功夫虾饼"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:gravity="left"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¥10.5"
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="right"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="x1"
            android:textColor="#999999"
            android:textSize="14sp"
            android:gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="香辣功夫蟹饼"
            android:textColor="#333333"
            android:textSize="14sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
