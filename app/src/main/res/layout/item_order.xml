    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="平台服务费"
            android:textColor="#333333"
            android:textSize="15sp"
            android:gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            />
