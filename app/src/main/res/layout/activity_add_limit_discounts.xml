<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/layout_header"
        android:id="@+id/header"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:layout_above="@+id/btn_save"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--活动名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/tv_text"
                    android:text="活动名称" />

                <include layout="@layout/layout_star" />

                <EditText
                    android:id="@+id/et_discount_name"
                    style="@style/base_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="end|center_vertical"
                    android:hint="最多可输入20个字"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">
                <!--活动标签-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/tv_text"
                        android:text="活动标签" />

                    <EditText
                        android:id="@+id/et_tag"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="默认显示“限时折扣”字样"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="#E5E5E5" />
                <!--活动描述-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:minHeight="70dp">

                    <TextView

                        style="@style/tv_text"
                        android:text="活动描述" />

                    <EditText
                        android:id="@+id/et_description"
                        style="@style/base_edit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="36dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="12dp"
                        android:background="@null"
                        android:hint="简单描述活动内容，可输入30个字符"
                        android:textSize="15sp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">
                <!--开始时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/tv_text"
                        android:text="开始时间" />

                    <include layout="@layout/layout_star" />

                    <TextView
                        android:id="@+id/tv_start_time"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请选择"
                        android:textSize="17sp" />

                    <ImageView style="@style/im_tongyong_jinru" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:background="#E5E5E5" />
                <!--结束时间-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/tv_text"
                        android:text="结束时间" />

                    <include layout="@layout/layout_star" />

                    <TextView
                        android:id="@+id/tv_end_time"
                        style="@style/base_edit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:gravity="end|center_vertical"
                        android:hint="请选择"
                        android:textSize="17sp" />

                    <ImageView style="@style/im_tongyong_jinru" />
                </LinearLayout>

            </LinearLayout>
            <!--购买下限-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center_vertical">

                <TextView
                    style="@style/tv_text"
                    android:text="购买下限" />

                <include layout="@layout/layout_star" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:gravity="end|center_vertical">

                    <ImageView
                        android:id="@+id/iv_less"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:padding="10dp"
                        android:src="@drawable/yhq_ic_jian" />

                    <TextView
                        android:id="@+id/tv_limit_less"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="1" />

                    <ImageView
                        android:id="@+id/iv_more"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:padding="10dp"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/yhq_ic_jia" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <!--添加商品-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="44dp">
                        <TextView
                            style="@style/tv_text"
                            android:text="添加商品" />
                        <include layout="@layout/layout_star" />

                    </LinearLayout>
                    <cn.ifhu.mershop.view.ExpandListView
                        android:id="@+id/lv_discount_goods"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_modify_discount"
                        android:divider="@null"
                        android:dividerHeight="0dp"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_add_goods"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/yhq_ic_add" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="17sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_blue"
        android:stateListAnimator="@null"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:textColor="#ffffff"
        android:textSize="17sp" />
</RelativeLayout>