<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头部-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#1C98F6">
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_fanhiui"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="用户评价"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="14dp"
                />
        </RelativeLayout>
        <!--好评度-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="好评度：99%"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="19dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_button_evaluate_gray"
                    android:text="全部（888）"
                    android:layout_marginRight="10dp"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:background="@drawable/bg_button_evaluate_gray"
                    android:text="好评（840）"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_button_evaluate_gray"
                    android:text="中评（19）"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/bg_button_evaluate_gray"
                    android:text="差评（1）"
                    android:textSize="12sp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            />
        <!--评价-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            >
            <!--头像和回复-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/iv_user_header"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:background="#1C98F6"
                    android:layout_marginRight="11dp"
                    />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="r****i"
                    android:gravity="left"
                    android:layout_toRightOf="@+id/iv_user_header"
                    android:textSize="16sp"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_user_header"
                    android:text="2019-03-08"
                    android:textSize="12sp"
                    android:gravity="left"
                    android:layout_alignParentBottom="true"
                    android:textColor="#666666"
                    />
                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="回复"
                    android:textSize="17sp"
                    android:textColor="#ffffff"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/bg_button_blue"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
            <!--商家星星-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="商家"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="口味 5 星"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="包装 5 星"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="18dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="配送 5 星"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginLeft="18dp"
                    />
            </LinearLayout>
            <!--评语-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="苹果非常非常棒！是今年新下来的苹果，是非常正宗的烟台红富士！口感又脆又甜，还有一个最大的优点
耐储存！简直堪称迷你版小苹果"
                android:gravity="left"
                android:textColor="#333333"
                android:textSize="15sp"
                android:lineSpacingExtra="15dp"
                android:layout_marginTop="20dp"
                />
            <!--图片-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="11dp"
                >
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:background="@drawable/photo"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:background="@drawable/photo"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    />
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:background="@drawable/photo"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
            <!--商家回复-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_button_gray"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="商家回复：感谢亲的五星好评，我们会继续努力，为大家提供香甜可口的正宗红富士苹果"
                    android:lineSpacingExtra="15dp"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="13dp"
                    android:layout_marginRight="14dp"
                    />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>