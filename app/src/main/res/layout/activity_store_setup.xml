<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="vertical">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--头部-->
        <include layout="@layout/layout_header"/>
        <!--营业状态-->
        <LinearLayout
            android:id="@+id/ll_store_state"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业状态"
                android:textSize="17sp"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="待开始营业"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#666666"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_jinru"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_marginLeft="15dp"/>
        <!--餐厅公告-->
        <RelativeLayout
            android:id="@+id/rl_notice"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#ffffff">
            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="餐厅公告"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp"/>
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_jinru"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="您还没发布餐厅公告"
                android:textSize="13dp"
                android:textColor="#999999"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>
        <!--店铺头像-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="店铺头像"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="#1C98F6"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_marginLeft="15dp"/>
        <!--餐厅电话-->
        <LinearLayout
            android:id="@+id/ll_store_phone"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="餐厅电话"
                android:textSize="17sp"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_store_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="18877665454"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#666666"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_jinru"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_marginLeft="15dp"/>
        <!--餐厅地址-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="餐厅地址"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_store_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="广州市天河区棠下街道"
                android:textSize="17sp"
                android:textColor="#666666"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_marginLeft="15dp"/>
        <!--营业时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="营业时间"
                android:textSize="17sp"
                android:textColor="#000000"
                android:gravity="left"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_store_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="09:00 ~ 22:00"
                android:layout_weight="1"
                android:textSize="17sp"
                android:textColor="#666666"
                android:gravity="right"
                />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_jinru"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E5E5E5"
            android:layout_marginLeft="15dp"/>
        <!--营业资质-->
        <RelativeLayout
            android:id="@+id/rl_store_license"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#ffffff"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="营业资质"
                android:textSize="17sp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:layout_width="9dp"
                android:layout_height="14dp"
                android:background="@drawable/tongyong_jinru"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>