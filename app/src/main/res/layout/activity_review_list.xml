<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

   <include layout="@layout/layout_header"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">
        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:text="好评度：99%"
            android:gravity="center"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_hao_ping"
            android:layout_width="0dp"
            android:text="好评（840）"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_zhong_ping"
            android:layout_width="0dp"
            android:gravity="center"
            android:text="中评（19）"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_cha_ping"
            android:text="差评（1）"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line"/>
    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <cn.ifhu.view.RVPIndicator
            android:id="@+id/rvp_indicator"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:indicator_color="@color/colorPrimaryDark"
            app:indicator_height="2dp"
            app:indicator_visible_count="2"
            app:text_color_normal="@color/black"
            app:text_color_selected="@color/colorPrimaryDark" />

        <ImageView style="@style/v_line" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
