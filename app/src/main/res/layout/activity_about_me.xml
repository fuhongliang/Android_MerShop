<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <include layout="@layout/layout_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        >

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_logo" />
        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邻邻发商家端"
            android:layout_centerHorizontal="true"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_below="@id/iv_logo"
            android:layout_marginTop="19dp"
            />
        <TextView
            android:id="@+id/tv_app_introduction"
            android:layout_below="@id/tv_app_name"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="助力商家，高效经营"
            android:layout_marginTop="10dp"
            android:textColor="@color/hint_text_color"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_introduction"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:text="v1.1.1"
            android:textSize="15sp"
            android:textColor="#666666"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="《邻邻发软件许可及服务协议》"
        android:textSize="13sp"
        android:textColor="#24A1FF"
        android:layout_above="@id/tv_copyright"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="深圳市前海一户科技有限公司 版权所有 粤ICP备 12067984号"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>


</RelativeLayout>