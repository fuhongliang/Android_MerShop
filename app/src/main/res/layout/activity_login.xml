<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="85dp"
        >
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:src="@drawable/ic_logo"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商户端"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/iv_logo"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎您！"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:typeface="normal"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="25dp"
        >
        <TextView
            android:id="@+id/tv_account_numbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            style="@style/base_edit"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入账号/手机号"
            android:maxLines="1"
            android:text="test01"
            android:inputType="text"
            android:layout_toRightOf="@+id/tv_account_numbe"
            android:layout_marginLeft="30dp"
            android:textColor="#999999"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/tv_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码"
            android:layout_marginLeft="15dp"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            />
        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:text="111111"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:layout_toRightOf="@id/tv_password"
            android:layout_marginLeft="31dp"
            android:textColor="#999999"
            android:background="@null"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />
    <TextView
        android:id="@+id/tv_agreement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击登陆及表示同意商户端平台管理协会"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        />

    <TextView
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="登录"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="51dp"
        android:gravity="center"
        android:background="@drawable/bu_button_blue"
        android:stateListAnimator="@null"
        />

    <TextView
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="注册开店"
        android:textSize="17sp"
        android:textColor="#000000"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:background="@drawable/bg_register_button"
        android:stateListAnimator="@null"
        />
</LinearLayout>