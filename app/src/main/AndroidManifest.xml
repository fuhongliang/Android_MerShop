<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.ifhu.mershop">
    <!-- 闪光灯权限 -->
    <uses-permission android:name="android.permission.FLASHLIGHT"/>
    <!-- 振动器权限 -->
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-permission android:name="android.permission.CAMERA" /> <!-- 允许程序连接到已配对的蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH" /> <!-- 允许程序发现和配对蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" /> <!-- 允许程序发现和配对蓝牙设备 -->
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- 地理位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--开机启动添加 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.LaunchActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.operation.ProductManageActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme_listDivider" />
        <activity android:name=".activity.me.RingSettingsActivity" />
        <activity
            android:name=".activity.operation.AddProductActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan" />
        <activity
            android:name=".activity.operation.EditProductActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            />
        <activity android:name=".activity.operation.ManageCategoryActivity" />
        <activity android:name=".activity.operation.SortCategoryActivity" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.TestActivity" />
        <activity
            android:name=".activity.me.StoreSetUpActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.me.AboutUsActivity" />
        <activity android:name=".activity.me.AccountAndSafeActivity" />
        <activity
            android:name=".activity.me.FeedBackActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.ChangePassWordActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.StoreStateActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.ChangeStorePhoneActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.BusinessQualificationActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.StoreNoticeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.operation.ReviewListActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.operation.AddOrEditCategoryActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.operation.SellingTimeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.WebViewActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.SearchBluetoothActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <service android:name=".BtService" /> <!-- 剪切页面 -->
        <activity android:name="com.yalantis.ucrop.UCropActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="cn.ifhu.mershop.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activity.operation.DiscountListActivity" />
        <activity
            android:name=".activity.operation.AddLimitDiscountsActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.operation.FullCutListActivity" />
        <activity android:name=".activity.operation.VouCherListActivity" />
        <activity android:name=".activity.operation.AddVouCherActivity" />
        <activity
            android:name=".activity.operation.AddFullReductionActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.operation.DiscountPackageListActivity" />
        <activity android:name=".activity.operation.DiscountAddProductActivity" />
        <activity
            android:name=".activity.operation.AddDiscountPackageActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.me.PrintingSettingsActivity" />
        <activity android:name=".activity.operation.ReleaseBankActivity" />
        <activity android:name=".activity.operation.AccoutInformationActivity" />
        <activity
            android:name=".activity.operation.FinanceActivity"
            android:launchMode="singleTask" />
        <activity android:name=".activity.operation.ManageBankActivity" />
        <activity android:name=".activity.operation.AddBankActivity" />
        <activity android:name=".activity.notice.NoticeListActivity" />
        <activity android:name=".activity.financial.BillsListActivity" />
        <activity android:name=".activity.operation.BindingSuccessActivity" />
        <activity android:name=".activity.operation.WithdrawActivity"/>
        <activity android:name=".activity.operation.WithdrawSuccessActivity"/>
        <activity android:name=".activity.NoticeDetailActivity"/>

        <receiver
            android:name="com.umeng.message.NotificationProxyBroadcastReceiver"
            android:exported="false" >
        </receiver>
        <service android:name="com.umeng.message.UmengIntentService" />

        <!-- 自定义消息接收service -->
        <service android:name=".service.MyPushIntentService"
           android:enabled="true" />
        <service android:name="com.umeng.message.UmengDownloadResourceService" >

        </service>
        　　<!-- startReceiver 用来设置开机启动 消息推送的接收service -->
        <receiver android:name=".service.StartReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </receiver>


        <service
            android:name=".notificaitons.NotificationService"
            android:exported="false" />
    </application>

</manifest>