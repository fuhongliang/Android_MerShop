<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.ifhu.mershop">

    <uses-permission android:name="android.permission.CAMERA" />

    <!-- 允许程序连接到已配对的蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <!-- 允许程序发现和配对蓝牙设备 -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- 允许程序发现和配对蓝牙设备 -->
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!--地理位置-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".activity.operation.ProductManageActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme_listDivider" />
        <activity android:name=".activity.me.RingSettingsActivity"></activity>
        <activity
            android:name=".activity.operation.AddProductActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.operation.EditProductActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity android:name=".activity.operation.ManageCategoryActivity" />
        <activity android:name=".activity.operation.SortCategoryActivity" />
        <activity
            android:name=".activity.login.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TestActivity" />

        <activity
            android:name=".activity.me.StoreSetUpActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.me.AboutUsActivity" />
        <activity android:name=".activity.me.AccountAndSafeActivity" />
        <activity
            android:name=".activity.me.FeedBackActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.ChangePassWordActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.StoreStateActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.ChangeStorePhoneActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.BusinessQualificationActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.StoreNoticeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".activity.operation.ReviewListActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.operation.AddOrEditCategoryActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".activity.operation.SellingTimeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.WebViewActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".activity.me.SearchBluetoothActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <service android:name=".BtService" />
        <!--剪切页面-->
        <activity android:name="com.yalantis.ucrop.UCropActivity" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="cn.ifhu.mershop.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".activity.operation.DiscountListActivity" />

        <activity
            android:name=".activity.operation.AddLimitDiscountsActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.operation.DiscountAddProductActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"/>

        <activity android:name=".activity.operation.FullCutActivity"
            />
    </application>

</manifest>