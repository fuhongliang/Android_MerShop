<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.ifhu.mershop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".mershop.activity.ProductManageActivity"/>
        <activity android:name=".mershop.activity.MainActivity"
            android:theme="@style/AppTheme_listDivider"/>
        <activity android:name=".mershop.activity.RingSettingsActivity"></activity>
        <activity
            android:name=".mershop.activity.AddOrEditProductActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".mershop.activity.ManageCategoryActivity" />
        <activity android:name=".mershop.activity.SortCategoryActivity" />
        <activity
            android:name=".mershop.activity.login.LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mershop.activity.TestActivity"/>

        <activity
            android:name=".mershop.activity.StoreSetUpActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".mershop.activity.AboutUsActivity" />
        <activity android:name=".mershop.activity.AccountAndSafeActivity" />
        <activity
            android:name=".mershop.activity.FeedBackActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.ChangePassWordActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.StoreStateActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.ChangeStorePhoneActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.BusinessQualificationActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.StoreNoticeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".mershop.activity.ReviewListActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.AddOrEditCategoryActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

        <activity
            android:name=".mershop.activity.SellingTimeActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name=".mershop.activity.WebViewActivity"
            android:windowSoftInputMode="stateHidden|adjustPan" />

    </application>

</manifest>